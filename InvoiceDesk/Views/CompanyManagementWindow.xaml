<Window x:Class="InvoiceDesk.Views.CompanyManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:InvoiceDesk.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Source={StaticResource Loc}, Path=[ManageCompanies]}" Height="450" Width="800">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 8">
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Save]}" Command="{Binding SaveCommand}" Width="100" Margin="0 0 8 0" />
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Delete]}" Command="{Binding DeleteCommand}" Width="100" Margin="0 0 8 0" />
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Close]}" Width="100" Click="OnClose" />
        </StackPanel>
        <DataGrid ItemsSource="{Binding Companies}" SelectedItem="{Binding SelectedCompany, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[NameLabel]}" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[VatLabel]}" Binding="{Binding VatNumber, UpdateSourceTrigger=PropertyChanged}" Width="120" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[CountryLabel]}" Binding="{Binding CountryCode, UpdateSourceTrigger=PropertyChanged}" Width="80" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[AddressLabel]}" Binding="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Width="200" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[IbanLabel]}" Binding="{Binding BankIban, UpdateSourceTrigger=PropertyChanged}" Width="150" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[BicLabel]}" Binding="{Binding BankBic, UpdateSourceTrigger=PropertyChanged}" Width="100" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[PrefixLabel]}" Binding="{Binding InvoiceNumberPrefix, UpdateSourceTrigger=PropertyChanged}" Width="80" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[NextNumberLabel]}" Binding="{Binding NextInvoiceNumber, UpdateSourceTrigger=PropertyChanged}" Width="60" />
                <DataGridTemplateColumn Header="{Binding Source={StaticResource Loc}, Path=[LogoLabel]}" Width="220">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True" Margin="0 0 4 0">
                                <Button Content="..." Width="30" Margin="0 0 4 0" DockPanel.Dock="Right" Padding="0" Click="OnBrowseLogo" />
                                <TextBox Text="{Binding LogoPath, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" />
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
