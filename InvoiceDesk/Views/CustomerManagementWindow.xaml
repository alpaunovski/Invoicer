<Window x:Class="InvoiceDesk.Views.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:InvoiceDesk.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Source={StaticResource Loc}, Path=[ManageCustomers]}" Height="450" Width="900">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 8">
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Save]}" Command="{Binding SaveCommand}" Width="100" Margin="0 0 8 0" />
            <Button Content="{Binding Source={StaticResource Loc}, Path=[Close]}" Width="100" Click="OnClose" />
        </StackPanel>
        <DataGrid x:Name="CustomersGrid" ItemsSource="{Binding Customers}" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[NameLabel]}" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                <DataGridComboBoxColumn x:Name="CustomerCountryColumn"
                                         Header="{Binding Source={StaticResource Loc}, Path=[CountryLabel]}"
                                         Width="120"
                                         SelectedValueBinding="{Binding CountryCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         SelectedValuePath="Code"
                                         DisplayMemberPath="Label"
                                         ItemsSource="{Binding DataContext.Countries, RelativeSource={RelativeSource AncestorType=Window}}" />
                <DataGridTextColumn x:Name="CustomerVatColumn" Header="{Binding Source={StaticResource Loc}, Path=[VatLabel]}" Width="140" Binding="{Binding VatNumber, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTemplateColumn x:Name="CustomerEikColumn" Header="{Binding Source={StaticResource Loc}, Path=[EikLabel]}" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Eik, UpdateSourceTrigger=PropertyChanged}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CountryCode}" Value="BG">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Eik, UpdateSourceTrigger=PropertyChanged}" MaxLength="13">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CountryCode}" Value="BG">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridCheckBoxColumn Header="{Binding Source={StaticResource Loc}, Path=[VatRegisteredLabel]}" Binding="{Binding IsVatRegistered, UpdateSourceTrigger=PropertyChanged}" Width="120" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[AddressLabel]}" Binding="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Width="200" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[EmailLabel]}" Binding="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="160" />
                <DataGridTextColumn Header="{Binding Source={StaticResource Loc}, Path=[PhoneLabel]}" Binding="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Width="120" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
